    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build & Test",
            "program": "${workspaceFolder}/src/bot.ts",
            "request": "launch",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "env": {
                "NODE_ENV": "development"
            },
            "outFiles": [
                "${workspaceFolder}/dist/*.js",
                "!**/node_modules/**"
            ]
        },
    ]
}